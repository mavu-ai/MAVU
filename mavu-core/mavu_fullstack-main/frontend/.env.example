# MavuAI Frontend Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
# Backend API base URL (without trailing slash)
# For local development (default):
VITE_API_URL=http://localhost:8000/api/v1

# WebSocket URL for real-time communication
# For local development (default):
VITE_WS_URL=ws://localhost:8000/api/v1

# Production URLs
# For production deployment, use:
# VITE_API_URL=https://mavu-api.aey-inc.uz/api/v1
# VITE_WS_URL=wss://mavu-api.aey-inc.uz/api/v1
#
# Legacy domains:
# VITE_API_URL=https://api.mavu.app/api/v1
# VITE_WS_URL=wss://api.mavu.app/api/v1

# Application Configuration
VITE_APP_NAME=MavuAI
VITE_APP_VERSION=1.0.0

# Feature Flags (optional)
# VITE_ENABLE_TELEGRAM=true
# VITE_ENABLE_VOICE_CHAT=true
# VITE_ENABLE_CONTEXT_UPLOAD=true

# Debug Mode (optional)
# VITE_DEBUG=false
